{
	"compilerOptions": {
		"module": "es2022",
		"moduleResolution": "Node",
		"target": "esnext",
		"strict": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"skipLibCheck": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": ["vue"]
	},
	"include": ["env.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
	"exclude": ["node_modules"]
}
